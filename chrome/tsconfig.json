{
    "compilerOptions": {
      "target": "ES2024",
      "module": "esnext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "outDir": "dist",
      "sourceMap": true,
      "lib": [
        "ES6",
        "DOM",
        "ES2024",
        "dom",
      ],
      "types": [
        "chrome-types"
      ],
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }